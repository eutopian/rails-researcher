<%= form_for [commentable, Comment.new] do |f| %>
	<%= f.hidden_field :commentable_type %>
	<%= f.hidden_field :parent_id, value: @article.id %>
	<%= f.text_area :content, class: 'form-control', placeholder: "Write something", cols: 60, rows: 5 %>
	<%= f.submit %>
<% end %>

<ul style="list-style: none;">
<%= render(partial: 'comments/comment', collection: commentable.comments, locals: {comment: @comment}) %>
</ul>